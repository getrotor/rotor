%% Logs config
[{sasl, [
         %% Minimise shell error logging
         {sasl_error_logger, false},
         %% Only report errors
         {errorlog_type, error},
         %% The logfile directory
         {error_logger_mf_dir, "log/"},
         %% Bytes per log file
         {error_logger_mf_maxbytes, 10485760}, % 10MB
         %% Max # of log files
         {error_logger_mf_maxfiles, 10}
        ]}].
